@using ToDoList.Models;
@model List<ToDoList.Models.Item>;

@{
  Layout = "_Layout";
}

<div class="container-fluid">
  <h1>Items for @User.Identity.Name</h1>
  <div class="container content">
    @if (Model.Any())
    {
      <ul>
        @foreach (Item item in Model)
        {
          <li>@Html.ActionLink($"{item.Description}", "Details", new { id = item.ItemId })</li>
        }
      </ul>
    }
    else
    {
      <h3>No items have been added yet!</h3>
    }

    <p>@Html.ActionLink("Add new item", "Create", "Items", null, new { @class = "btn btn-lg btn-primary" })</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
  </div>
</div>


