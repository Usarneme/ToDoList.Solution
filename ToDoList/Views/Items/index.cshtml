@using ToDoList.Models;
@model List<ToDoList.Models.Item>;

@{
  Layout = "_Layout";
}

<div class="container-fluid">
  <h2 class="pt-5 pb-3">ToDo List Items</h2>
  <div class="container content">
    @if (Model.Count == 0)
    {
      <p>There are no items in the list.</p>
    }
    else
    {
      <ul>
        @foreach (Item item in Model)
        {
          <li>
            @Html.ActionLink($"{item.Description}", "Details", new { id = item.ItemId }) | @item.Category.Name
          </li>
        }
      </ul>
    }

    <p>@Html.ActionLink("Add new item", "Create", "Items", null, new { @class = "btn btn-lg btn-primary" })</p>
  </div>
</div>


