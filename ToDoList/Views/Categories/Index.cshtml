@using ToDoList.Models;

@{
  Layout = "_Layout";
}

@* TODO update to use Html helpers and Form *@
<div class="container-fluid">
  <h2 class="pt-5 pb-3">Categories</h2>

  <div class="container content">

    @if (@Model.Count == 0)
    {
      <h4>No categories have been added yet!</h4>
    }

    @foreach (Category category in Model)
    {
      <h4><a href='/categories/@category.CategoryId'>@category.Name</a></h4>
    }

    @Html.ActionLink("Add new Category", "Create", "Categories", null, new { @class = "btn btn-lg btn-primary" })
  </div>
</div>
